// Vars
blue_darken_4 = #0D47A1
blue_lighten_4 = #BBDEFB
gray = #212121
white = #fff
blue_calendar = #1565C0
content_background = #efefef
tabs_height = 38px


$body-font-family = 'Ubuntu', sans-serif
$alert-padding = 10px
$alert-margin = 0 auto
$data-table-heading = blue_calendar
$data-table-heading-text = white



@import '../../node_modules/vuetify/src/stylus/main.styl'
@import '../../node_modules/vuetify/src/stylus/app.styl'

// General
.content--wrap
    background: content_background
    // padding: 10px;

// Breadcrumbs
.breadcrumbs
    padding-top: 0
    padding-left: 0

.breadcrumbs--large li
    font-size: 18px

// Button styles
.btn__content
    padding: 0 8px 0 6px

.btn .icon--left
  margin-right: 4px


.btn
    height: 30px
    &.accent
        background-color: blue_calendar!important
    &.accent--text
        border-color: blue_calendar!important
        color: blue_calendar!important
    &--floating
        height 56px


// Card styles
.card__title
    text-transform: uppercase

// Chips styles
.chip
    .chip__content
        height: 20px;

// .card__row-title
//     padding: 8px 16px 6px 0

// Datatable style
.datatable
    background: white!important

    th
        background: blue_darken_4
        color: white!important
    i
        color: white

// Dialog styles
.dialog
    background: white

// Form elements
.input-group label
  font-size: 14px

// Subheader
.subheader
    padding: 0
    margin-bottom: 14px

//Table styles
table.table thead tr
  height: tabs_height

// Tabs styles
.tabs__container
    height: tabs_height

    &--icons-and-text
        height: tabs_height
    .tabs__div
        height: tabs_height

        @media $display-breakpoints.sm-and-up
          min-width: 100px

.tabs__item--active
    background-color: gray


