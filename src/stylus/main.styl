// Vars
blue_darken_4 = #0D47A1
white = #fff
blue_calendar = #1565C0
content_background = #efefef


$body-font-family = 'Ubuntu', sans-serif
$alert-padding = 10px
$alert-margin = 0 auto
$data-table-heading = blue_calendar
$data-table-heading-text = white



@import '../../node_modules/vuetify/src/stylus/main.styl'
@import '../../node_modules/vuetify/src/stylus/app.styl'

// General
.content--wrap
    background: content_background

// Button styles
.btn__content
    padding: 0 8px 0 6px

.btn .icon--left
  margin-right: 4px;


.btn
    &.accent
        background-color: blue_calendar!important
    &.accent--text
        border-color: blue_calendar!important
        color: blue_calendar!important


// Card styles
.card__title
    text-transform: uppercase

// Chips styles
.chip
    .chip__content
        height: 20px;

.card__row-title
    padding: 8px 16px 6px 0

// Datatable style
.datatable
    background: white!important

    th
        background: blue_darken_4
        color: white!important
    i
        color: white!important

// Dialog styles
.dialog
    background: white

// Tabs styles
.tabs__container
    &--icons-and-text
        height: 48px
    .tabs__div
        height: 48px

        @media $display-breakpoints.sm-and-up
          min-width: 100px

.tabs__items
    padding: 0 30px 30px 30px;


