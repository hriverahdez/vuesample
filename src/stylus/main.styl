$body-font-family = 'Ubuntu', sans-serif
$alert-padding = 10px
$alert-margin = 0 auto
$data-table-heading = #1565C0
$data-table-heading-text = #fff


@import '../../node_modules/vuetify/src/stylus/main.styl'
@import '../../node_modules/vuetify/src/stylus/app.styl'

// General
.content--wrap
    background: #efefef

// Button styles
.btn__content
    padding: 0 8px 0 6px

.btn .icon--left
  margin-right: 4px;


.btn
    &.accent
        background-color: #1565C0!important
    &.accent--text
        border-color: #1565C0!important
        color: #1565C0!important


// Card styles
.card__title
    text-transform: uppercase

.card__row-title
    padding: 8px 16px 6px 0

// Dialog styles
.dialog
    background: #fff

// Tabs styles
.tabs__container
    &--icons-and-text
        height: 48px
    .tabs__div
        height: 48px

        @media $display-breakpoints.sm-and-up
          min-width: 100px

.tabs__items
    padding: 0 30px 30px 30px;


